<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:paddingStart="26dp"
    android:paddingEnd="26dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <EditText
        android:id="@+id/sign_up_email"

        android:background="@drawable/shape_white"
        android:textColor="@color/bsBlack"
        android:textColorHint="@color/bsGrey"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Your Email"
        android:textSize="14sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <EditText
        android:id="@+id/sign_up_password"

        android:background="@drawable/shape_white"
        android:textColor="@color/bsBlack"
        android:textColorHint="@color/bsGrey"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <EditText
        android:id="@+id/sign_up_confirm_password"

        android:background="@drawable/shape_white"
        android:textColor="@color/bsBlack"
        android:textColorHint="@color/bsGrey"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="14sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:textColorHint="@color/bsWhite"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Buat Akun Sebagai:"

        android:textColor="@color/bsBlack"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:background="@drawable/shape_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/sign_up_costumer"

            android:background="@drawable/shape_active_1"
            android:textColor="@color/bsWhite"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Pribadi"
            android:textAllCaps="false"
            />

        <Space
            android:layout_width="26dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/sign_up_seller"

            android:background="@drawable/shape_passive_1"
            android:textColor="@color/bsWhite"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Toko"
            android:textAllCaps="false"
            />

    </LinearLayout>

    <Space
        android:layout_height="26dp"
        android:layout_width="match_parent" />


    <Button
        android:id="@+id/sign_up_create_account"

        android:background="@drawable/shape_red"
        android:textColor="@color/bsWhite"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Buat Akun"
        android:textAllCaps="false"
        />

    <Space
        android:layout_height="26dp"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/sign_up_go_to_sign_in"

        android:textColorHint="@color/bsWhite"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Kembali Menuju Halaman Sign In"

        android:textColor="@color/bsBlack"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>